

# Parse input.
# Assume current working directory as root.  
# Returns a list of directories, tuples containing name and size.
def parse_input(lines_iterator):	
	dirs = dict()
	dir_name = "/"
	dir_size = 0
	
	try:
		while line := next(lines_iterator):
			line = line.strip()
			
			words = line.split(" ")
			if words[0] == "$": # command
				if words[1] == "cd": # change directory
					if words[2] == "..":
						break
                    
               		# Get dir name.
   	            	subdir_name = words[2]
	
	   	            # Recursive call to get dir size, and subdirs info.
    	   	        subdirs = parse_input(lines_iterator)

       		        # Current working directory is automatically marked as "/".
					# Update that, and add subdir info into dirs.
       	        	subdir_size = subdirs.pop("/")
					subdirs[subdir_name] = subdir_size
               		dirs.update(subdirs)

           		elif words[1] == "ls":
   	            	pass
                
       		else: # listing
           		if words[0].isnumeric():
               		dir_size += int(words[0])
           		else:
               		pass

	except Stopiteration as e:
		pass

    dirs[dir_name] = dir_size
    return dirs


def main():
    # Get input.
    file = open("input")
    lines = file.readlines()
    file.close()

    lines_iterator = iter(lines)
    dirs = parse_input(lines_iterator)

    print(dirs)


if __name__ == "__main__":
    main()
